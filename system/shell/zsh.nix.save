# Configs for zsh

{ config, pkgs, ... }:

{
  programs.zsh = {
    enable = true;
    enableCompletion = true;
    autosuggestions.enable = true;
    syntaxHighlighting.enable = true;

    shellAliases = {
      # Add aliases here
    };

    # ohMyZsh: zsh plugin manager
    ohMyZsh = {
      enable = true;
      plugins = [
        "git"  # Adds git alias
        "z"    # Adds z command
      ];
      theme = "robbyrussel";
    };

    histSize = 10000;
    histFile = "$HOME/.zsh_history";
    setOptions = [
      "HIST_IGNORE_ALL_DUPS"
    ];
  };    

  # Make default for all users
  users.defaultUserShell = pkgs.zsh;
}
